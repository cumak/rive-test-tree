---
import Layout from '@layouts/Layout.astro';
---

<Layout title="Rive test">
	<main class="main">
		<div class="camvasWrap">
			<canvas id="canvas" />
		</div>
		<div class="btns">
			<button class="js-btn-morning">朝</button>
			<button class="js-btn-day">昼</button>
			<button class="js-btn-sunset">夕</button>
			<button class="js-btn-night">夜</button>
			<button class="js-btn-rain is-rain">雨</button>
		</div>
	</main>
</Layout>

<style lang="scss">
@use '../styles/sass/foundation/variable.scss' as *;

main{
	position: relative;
	width: 100%;
	height: 100vh;
	background: #292929;
}
.camvasWrap{
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	height: 100%;
	max-height: 700px;
	margin: auto;
	@include sp{
		max-height:80vh;
	}
	&::before{
		content:'';
		position: absolute;
		bottom: 8vh;
		left: 0;
		display: inline-block;
		width: 100%;
		height: 200px;
		background: url(/img/bg-country.webp) center bottom / 700px repeat-x;
		opacity: .6;
		@include sp{
			bottom: 25%;
			background-size: 300px;
			height: 100px;
		}
	}
}
#canvas{
	position: absolute;
	left: 0;
	top: 0;
	object-fit: cover;
	width: 100%;
	height: 100%;
}
.btns{
	position: absolute;
	top: 20px;
	right: 20px;
	display: flex;
	gap: 10px;
	button{
		display: flex;
		align-items: center;
		justify-content: center;
		width: 60px;
		height: 60px;
		color: #fff;
		border: none;
		border: 0.5px solid #ccc;
		border-radius: 50%;
		font-size: 1.6rem;
		background: linear-gradient(0deg,#de9329,#852a07);
		transition: opacity .2s;
		cursor: pointer;
		&.is-rain{
			background: linear-gradient(0deg,#0d81c5,#7f3010);
		}
		&:hover{
			opacity: .8;
		}
	}
}

</style>